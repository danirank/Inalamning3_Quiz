<UserControl x:Class="QuizInlamning3.View.QuizSetup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizInlamning3.View"
             xmlns:models="clr-namespace:QuizInlamning3.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#F6F6F6" Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Rubrik + välj quiz -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <Border BorderBrush="#D5D9E0" BorderThickness="1" Background="White" CornerRadius="8" Margin="0,0,0,8" Padding="12">
                <TextBlock x:Name="headerSetup"
                           Text="Quiz"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="32"
                           FontWeight="SemiBold"
                           Foreground="#333" />
            </Border>

            <Border Background="White" CornerRadius="8" BorderBrush="#D5D9E0" BorderThickness="1" Padding="10" >
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Välj quiz:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="changeQuiz"
                              SelectionChanged="changeQuiz_SelectionChanged"
                              Width="220" Height="28"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Spelare -->
        <StackPanel Grid.Row="1" Margin="0,0,0,12">
            <Border Background="White" CornerRadius="8" BorderBrush="#D5D9E0" BorderThickness="1" Padding="12" Margin="0,0,0,8">
                <TextBlock Text="Skriv spelarnamn och tryck på lägg till ⬇️"
                           HorizontalAlignment="Center"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="#444"/>
            </Border>

            <Border Background="White" CornerRadius="8" BorderBrush="#D5D9E0" BorderThickness="1" Padding="12" Margin="0,0,0,8">
                <TextBox x:Name="playerNameTxt"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         Width="320" Height="40"
                         FontSize="20"
                         Padding="8"/>
            </Border>

            <!-- AddPlayerBtn -->
            <Border Background="White" CornerRadius="8" BorderBrush="#D5D9E0" BorderThickness="1" Padding="10" Margin="0,0,0,0">
                <Button x:Name="addPlayerBtn"
                        Click="addPlayerBtn_Click"
                        Width="120" Height="34"
                        HorizontalAlignment="Center"
                        Padding="8,4">Lägg till spelare</Button>
            </Border>
        </StackPanel>

        <!-- Kategorier + Players -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Kategorier -->
            <Grid Grid.Column="0" Margin="0,0,6,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="White" CornerRadius="8" BorderBrush="#D5D9E0" BorderThickness="1" Padding="10" Margin="0,0,0,8">
                    <TextBlock FontSize="16" FontWeight="Bold" Text="Välj kategorier" />
                </Border>

                <Border Grid.Row="1" Background="White" CornerRadius="8" BorderBrush="#D5D9E0" BorderThickness="1" Padding="10">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="CategoryPanel">
                            
                            <!-- Input from .cs -->
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- Players -->
            <StackPanel Grid.Column="1" Margin="6,0,0,0">
                <Border Background="White" CornerRadius="8" BorderBrush="#D5D9E0" BorderThickness="1" Padding="10" Margin="0,0,0,8">
                    <TextBlock FontSize="16" FontWeight="Bold" Text="Quizare"/>
                </Border>

                <Border Background="White" CornerRadius="8" BorderBrush="#D5D9E0" BorderThickness="1" Padding="6">
                    <DataGrid x:Name="activePlayersData"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              Background="Transparent"
                              HeadersVisibility="None"
                              GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#FFF5F5F5"
                              BorderThickness="0"
                              Margin="4">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding PlayerName}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Antal frågor + Start-knapp -->
        <Grid Grid.Row="3" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="8" BorderBrush="#D5D9E0" BorderThickness="1" Padding="10" Margin="0,0,6,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock VerticalAlignment="Center" FontSize="18" Margin="0,0,8,0">Antal frågor: </TextBlock>
                    <TextBox Margin="0,0,0,0"
                             Width="90" Height="34"
                             FontSize="18"
                             x:Name="QuestionCountTxtBox"
                             PreviewTextInput="QuestionCountTxtBox_PreviewTextInput"
                             VerticalAlignment="Center"
                             Padding="6"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Column="1" Orientation="Horizontal" >
                <Border Background="White" CornerRadius="8" BorderBrush="#D5D9E0" BorderThickness="1" Padding="10" Margin="6,0,0,0">

                    <Button x:Name="BackToMenuBtn"
            Click="BackToMenuBtn_Click"
            Content="Tillbaka till menyn"
            Height="34"
            Padding="14,6"
            HorizontalAlignment="Right"
            MinWidth="120"/>
                </Border>
                <Border Background="White" CornerRadius="8" BorderBrush="#D5D9E0" BorderThickness="1" Padding="10" Margin="6,0,0,0">
                
                <Button x:Name="StartQuizBtn"
                        Click="StartQuizBtn_Click"
                        Content="Starta Quiz"
                        Height="34"
                        Padding="14,6"
                        HorizontalAlignment="Right"
                        MinWidth="120"/>
            </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
