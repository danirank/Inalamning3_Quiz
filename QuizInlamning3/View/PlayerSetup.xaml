<UserControl x:Class="QuizInlamning3.View.PlayerSetup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizInlamning3.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--Rubrik-->
        <Border BorderBrush="Black" BorderThickness="2" Margin="10">
            <TextBlock Text="Quiz setup" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" />
        </Border>

        <!--Spelare-->
        
        <StackPanel Grid.Row="1">
            <Border>
                <TextBlock Text="Enter name" HorizontalAlignment="Center" Margin="10"></TextBlock>
            </Border>
            <Border>
                <TextBox x:Name="playerNameTxt" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Height="50" FontSize="30" />
            </Border>


           <!--AddPlayerBtn-->
            <Border Margin="10" Grid.Row="1">
                <Button x:Name="addPlayerBtn" Click="addPlayerBtn_Click" Width="80" Height="30" VerticalAlignment="Top">Add player</Button>
            </Border>
        </StackPanel>

       
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Kategorier -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- rubrik -->
                    <RowDefinition Height="*"/>
                    <!-- scrollbart innehåll -->
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
               FontSize="16" FontWeight="Bold"
               Text="Choose Categories" Margin="0,0,0,8"/>

                <ScrollViewer Grid.Row="1"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
                    <StackPanel x:Name="CategoryPanel">
                        <CheckBox x:Name="SelectAllCategories" Checked="SelectAllCategories_Checked" Unchecked="SelectAllCategories_Checked">All</CheckBox>
                        <!-- Input from .cs -->
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!--Players-->
            <StackPanel Grid.Column="1" >
                <Border>
                    <TextBlock FontSize="16" FontWeight="Bold">Players</TextBlock>
                </Border>
                <Border>
                <DataGrid x:Name="activePlayersData"
AutoGenerateColumns="False"
CanUserAddRows="False"
CanUserDeleteRows="False"
IsReadOnly="True"
Background="Transparent"
HeadersVisibility="None"
GridLinesVisibility="Horizontal"
AlternatingRowBackground="#FFF5F5F5"
BorderThickness="0"
Margin="10">
                    <DataGrid.Columns>
                        
                        <DataGridTextColumn  Binding="{Binding PlayerName}" Width="*" />
                        
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
            </StackPanel>
                
           
        </Grid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border>
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center">Number of questions: </TextBlock>
                    <TextBox Width="20" Height="20" x:Name="QuestionCountTxtBox" PreviewTextInput="QuestionQountTxtBox_PreviewTextInput" VerticalAlignment="Center">10</TextBox>
                </StackPanel>
            </Border>
            <!--StartBtn-->
            <Border  Grid.Column="1" Height="25"  BorderBrush="Black" BorderThickness="2" Margin="10">
                <Button x:Name="StartQuizBtn" Click="StartQuizBtn_Click" Content="Start Quiz" />
            </Border>
        </Grid>
        

    </Grid>
</UserControl>
