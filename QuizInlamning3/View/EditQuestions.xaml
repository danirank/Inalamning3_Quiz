<UserControl x:Class="QuizInlamning3.View.EditQuestions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizInlamning3.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FAFAFA" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <Border Padding="12" Background="#F0F3F7" CornerRadius="6">
                <TextBlock x:Name="Header"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Text="Redigera/Skapa nya frågor"/>
            </Border>

            <StackPanel Orientation="Horizontal" Margin="0,8,0,0" HorizontalAlignment="Center">
                <TextBox x:Name="newQuizName" Visibility="Collapsed" Height="28" Width="200" />
                <Button x:Name="confirmNewQuizName" Click="confirmNewQuizName_Click" Visibility="Collapsed" Padding="10,6">Byt namn på Quiz</Button>
            </StackPanel>
        </StackPanel>

        <!-- Listbox + Alternativ -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Rubriker -->
            <Border Grid.Row="0" Grid.Column="0" Padding="8" Background="#EDEFF2" CornerRadius="6" Margin="0,0,8,8">
                <TextBlock Text="Alla frågor" FontWeight="Bold"/>
            </Border>
            <Border Grid.Row="0" Grid.Column="1" Padding="8" Background="#EDEFF2" CornerRadius="6" Margin="8,0,0,8">
                <TextBlock HorizontalAlignment="Center" Text="Redigera fråga" FontWeight="Bold"/>
            </Border>

            <!-- Listan -->
            <Border Grid.Row="1" Grid.Column="0" BorderBrush="#D8DFE6" BorderThickness="1" CornerRadius="6" Background="White" Margin="0,0,8,0">
                <ListBox Name="ListAllQuestionsText"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         Margin="0"
                         Padding="6"
                         SelectionChanged="ListAllQuestionsText_SelectionChanged"/>
            </Border>

            <!-- Editpanel -->
            <Border Grid.Row="1" Grid.Column="1" BorderBrush="#D8DFE6" BorderThickness="1" CornerRadius="6" Background="White" Margin="8,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Grid.Column="1" Grid.Row="1" Margin="12" >
                        <StackPanel Margin="0,0,0,4" x:Name="answersTxtbox">
                            <TextBox x:Name="TxtQuestionText" Height="28" Margin="0,0,0,6" />
                            <TextBox x:Name="imageStringTxtbox" Height="28" Margin="0,0,0,6"/>
                            <TextBox x:Name="categoryTxtBox" Height="28" Margin="0,0,0,10"/>
                            <StackPanel x:Name="AnswerPanel" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"  Margin="0,6,0,0">
                            <Button x:Name="newQuestion" Click="newQuestion_Click" Content="Ny fråga" Padding="12,6"/>
                            <Button x:Name="saveChangesBtn" Click="saveChangesBtn_Click" Padding="12,6">Spara ändringar</Button>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Footer-knappar -->
        <Grid Grid.Row="2" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <ListBox>
            <StackPanel x:Name="LoadQuizes" Orientation="Horizontal" Grid.Column="0" >
                <Button x:Name="newQuizBtn" Click="newQuizBtn_Click" Padding="12,8">Nytt quiz</Button>
            </StackPanel>
            </ListBox>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="SaveAndbackToMenubtn" Click="SaveAndbackToMenubtn_Click" Padding="14,8">Spara och gå tillbaka till menyn</Button>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
