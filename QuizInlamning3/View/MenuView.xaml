<UserControl x:Class="QuizInlamning3.View.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizInlamning3.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Blue">

        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="1" Grid.Column="1" Text="QuizGame" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25" Foreground="Beige"/>

        <StackPanel VerticalAlignment="Center" Grid.Row="2" Grid.Column="1">
            <Button x:Name="playBtn" Click="playBtn_Click" Margin="10">Play</Button>
            <Button x:Name="editBtn" Click="editBtn_Click" Margin="10">Edit Questions</Button>
            <Button x:Name="leaderboardBtn" Click="leaderboardBtn_Click" Margin="10">Show Leaderboard</Button>
        </StackPanel>

    </Grid>
</UserControl>
